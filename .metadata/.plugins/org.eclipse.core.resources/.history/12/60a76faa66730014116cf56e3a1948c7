package uva.cs2110.ghosthunter;

import android.os.AsyncTask;

public class Changelocation extends AsyncTask<GameView, GameView, Double>{

	GameView theView;
	@Override
	protected Double doInBackground(GameView... params) {
		while (!this.isCancelled()){
			this.publishProgress(params);
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				
			}
		}
		return  0.0;
	}
	
	@Override
	protected void onProgressUpdate(GameView... params){
		 for (GameView cv : params) {
			 cv.invalidate();
		 }
	}
	
	@Override
	protected void onPostExecute(Double result) {
		
	}
	
	@Override
	protected void onCancelled() {
		
	}

}
